   <%= form_for [ @post, @comment ] do |f| %>
  <div class = " col-md-5">
    <%= f.label :username %><br/>
    <%= f.text_field :user , :class => "form-control", placeholder:"name"%>
  
    <%= f.label :body %><br/>
    <%= f.text_area :body, :class => "form-control", placeholder:"leave a comment" %>
     <br>
    <%= f.submit 'Submit' , :class=>"post btn btn-success"%>
  </div>
<% end %>