<div class="container">
  <div class="row">
  <p id="notice"><%= notice %></p>

  <div class="col-md-4">
      <% @posts.each do |post| %>
        <p>Username:<%= post.user.username %></p> 
        <p>Email:<%= post.user.email %></p> 
      <% end %>
  <button class='btn btn-primary'><%= link_to 'New Post', new_post_path %></button>
  </div>
  <div class="col-md-8">
      <h1>Posts</h1>
      <hr>
       <% @posts.each do |post| %>
          <div class="card ">
              <div class="card-header">
                 <div class="container">
                    <div class="row">
                        <div class="col-md-4">
                            
                            <p><i class="fa fa-user"></i>Author:<%= post.user.username %></p> 
                                  <strong> <p>Created on:<%= post.created_at %></p> </strong>
                       </div>
                      <div class="col-md-8">
                         <ul class="nav nav-tabs card-header-tabs">
                            <%= link_to 'view', post %>
                            <%if post.user == current_user%>
                            <%= link_to ' edit', edit_post_path(post) %>
                            <%= link_to 'delete', post, method: :delete, data: { confirm: 'Are you sure?' } %>
                             <%end%>
                          </ul>
                      </div>
                    </div>
                  </div>
                </div>
                  <div class="card-body">
                           <h3 class="card-text"> <%= post.body %></h3>  
                       </div>
                      <hr>
                      <div>
                       <td><%= render partial: "likes", locals: {post: post}%></td>   
                       <td><i class="fa fa-thumbs-up"></i><%= post.likes.count %> <%= (post.likes.count) == 1 ? 'Like' : 'Likes'%></td><hr>
                      </div>
                      <div class="input-group mb-3">
                         <input type="text" class="form-control" placeholder="Write a comment..." aria-label="Recipient's username" aria-describedby="basic-addon2">
                         <div class="input-group-append">
                      </div>
                  </div>
                      <p>Here should be Like + user`s comment</p>
                      <hr>
                  </div>
           <%end %>
        </div>
<table>
  <thead>
    <tr>
      <th>Post</th>
       <th>username</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.body %></td>
        <td><%= post.user.email %></td>
         <td><%= link_to 'view this post', post %></td>
        <%if post.user == current_user%>
        <td><%= link_to ' edit this post', edit_post_path(post) %></td>
        <td><%= link_to 'delete this post', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%end%>
          <td><%= render partial: "likes", locals: {post: post}%></td>   
          <td><%= post.likes.count %> <%= (post.likes.count) == 1 ? 'Like' : 'Likes'%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New Post', new_post_path %>
  </div>




  </div>
</div>
