<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Post</th>
       <th>username</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.body %></td>
        <td><%= post.user.email %></td>
            <div class="content">
                 <%= post.body %>
            </div>

          <%= render 'comment/comment'%>
           <div class="comment-count">
                <span class="tag is-rounded"><%= post.comments.count %> comments</span>
            </div>

          <p><%= render partial: "likes", locals: {post: post}%></p>   
          <p><%= post.likes.count %> <%= (post.likes.count) == 1 ? 'Like' : 'Likes'%></p>

         <td><%= link_to 'view this post', post %></td>
        <%if post.user == current_user%>
        <td><%= link_to ' edit this post', edit_post_path(post) %></td>
        <td><%= link_to 'delete this post', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
