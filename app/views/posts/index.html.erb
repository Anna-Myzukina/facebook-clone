<div class="container">
  <div class="row">
  <p id="notice"><%= notice %></p>

  <div class="col-4">
    <% @posts.each do |post| %>
  <p>Author:<%= post.user.email %></p> 
  <% end %>
  </div>
  <div class="col-8">
    <h1>Posts</h1>
       <% @posts.each do |post| %>
  <div class="content">
                 <%= post.body %>
            </div>
<%end %>
<table>
  <thead>
    <tr>
      <th>Post</th>
       <th>username</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.body %></td>
        <td><%= post.user.email %></td>
          


          <p><%= render partial: "likes", locals: {post: post}%></p>   
          <p><%= post.likes.count %> <%= (post.likes.count) == 1 ? 'Like' : 'Likes'%></p>

         <td><%= link_to 'view this post', post %></td>
        <%if post.user == current_user%>
        <td><%= link_to ' edit this post', edit_post_path(post) %></td>
        <td><%= link_to 'delete this post', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
  </div>




  </div>
</div>
