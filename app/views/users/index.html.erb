<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <% if  current_user %>
        <td><%= link_to 'Show', user %></td>
          <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%else%> 
        
      
        <td><%= link_to 'Show', user %></td>
         <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

